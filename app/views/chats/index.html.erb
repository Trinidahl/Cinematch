<div class="container my-5" style="max-width: 900px; margin: 0 auto; width: 100%">
  <h1 class="form-title">Find Your Next Movie ðŸŽ¬</h1>
  <div>
    <h3 class="mb-3">Look at my previous watchlists:</h3>
      <div class="mb-4">
        <% @chats.each do |chat| %>
          <%= link_to chat_path(chat), class: "text-decoration-none" do %>
            <div class="d-flex align-items-center justify-content-between p-3 mb-2 bg-white"
            style="box-shadow: 0 2px 8px rgba(108, 107, 107, 0.1); border-radius: 8px; cursor: pointer;">
              <div class="d-flex align-items-center">
                <span class="fs-4 me-3">ðŸŽ¬</span>
                <div>
                  <div class="fw-semibold text-dark"><%= chat.title %></div>
                  <small class="text-muted">Mood: <%= chat.mood || "General" %></small>
                </div>
              </div>
              <span class="text-primary">â†’</span>
            </div>
          <% end %>
        <% end %>
      </div>
    <div class="p-4" style="background: white; box-shadow: 0 2px 8px rgba(108, 107, 107, 0.1); border-radius: 8px;">
      <h3 class="mb-4 fw-bold">ðŸŽ¥ Launch a New Watchlist</h3>
        <%= simple_form_for(@chat) do |f| %>
          <%= f.input :mood, label: "What are you in the mood for?", placeholder: "e.g. feel-good, sad, adventurous" %>
          <%= f.input :genre, label: "Preferred genre(optional)", placeholder: "e.g. happy, drama, thriller" %>
          <%= f.input :actor, label: "Any actor you want to watch (optional)" %>
          <%= f.input :realisator, label: "Any realisator (optional)" %>
          <%= f.input :year, label: "From a specific year (optional)" %>
          <%= f.input :country, as: :string, label: "From which country (optional)?" %>
          <%= f.input :length,
                    label: "Movie length restriction (optional)",
                    as: :select,
                    collection: ["No limit", "Under 60 min", "60-90 min", "90-120 min", "Over 120 min"],
                    include_blank: "Select length" %>
          <%= f.submit "Find my movie", class: "btn btn-primary", style: "border-radius: 8px;" %>
        <% end %>
      </div>
  </div>
</div>
