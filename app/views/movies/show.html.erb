<div class="movie-detail-container" style="max-width: 1200px; margin: 0 auto;">
  <!-- Back Button -->
  <header class="back-button">
    <%= link_to "javascript:history.back()" do %>
      <i class="fas fa-arrow-left"></i>
      <span>Back to Movie Search</span>
    <% end %>
  </header>

  <!-- Movie Hero Section -->
  <div class="movie-hero">
    <!-- Movie Poster -->
    <div class="movie-poster">
      <% if @movie.img_url.present? %>
        <%= image_tag @movie.img_url, alt: @movie.title %>
      <% else %>
        <div class="placeholder-poster">
          <i class="fas fa-film"></i>
          <p>No Poster Available</p>
        </div>
      <% end %>
    </div>

    <!-- Movie Details -->
    <div class="movie-details">
      <!-- Title -->
      <h1><%= @movie.title %></h1>

      <!-- Meta Info (Year, Genre, Country) -->
      <div class="movie-meta">
        <span class="year"><%= @movie.year %></span>
        <span class="separator">•</span>
        <span class="genre"><%= @movie.genre %></span>
        <% if @movie.country.present? %>
          <span class="separator">•</span>
          <span class="country"><%= @movie.country %></span>
        <% end %>
        <span class="separator">•</span>
        <span class="director">By <%= @movie.director %></span>
      </div>

      <!-- Info Grid (Ranking) -->
        <div class="movie-meta"></div>
          <% if @movie.rank.present? %>
            <div class="movie-info-grid">
              <div class="info-item"></div>
            </div>
          <% end %>

      <!-- Description -->
      <div class="movie-description">
        <p><%= simple_format(@movie.description) %></p>
      </div>

<%#       <!-- Action Buttons -->
      <div class="movie-actions">
        <%= link_to "Remove from my List", "#", class: "btn-add-watchlist" %>
      </div>
    </div>
  </div> 

  <!-- Original Prompt (if exists) -->
  <% if @movie.system_prompt.present? %>
    <div class="original-prompt-section">
      <h3><i class="fas fa-robot"></i> AI Generation Prompt</h3>
      <p><%= @movie.system_prompt %></p>
    </div>
  <% end %>
</div>
